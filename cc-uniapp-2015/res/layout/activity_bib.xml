<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/bib_hopla"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:clickable="true"
            android:onClick="toggle_contents"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/bib_hopla_titel" 
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/bib_hopla_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bib_hopla"
            android:layout_alignTop="@+id/bib_hopla"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bib_hopla_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bib_hopla_address" />
            
            <TextView
                android:id="@+id/bib_hopla_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bib_hopla_description" />

            <TextView
                android:id="@+id/bib_hopla_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bib_hopla_tel" />
            
            <TextView
                android:id="@+id/bib_hopla_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bib_hopla_email" />
            <TextView
                android:id="@+id/bib_hopla_opening_time_bibgeb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bib_hopla_opening_time_bibgeb_title" />
            <TextView
                android:id="@+id/bib_hopla_opening_time_bibgeb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bib_hopla_opening_time_bibgeb" />

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />
        </LinearLayout>

        <TextView
            android:id="@+id/bib_bgp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/bib_hopla_content"
            android:clickable="true"
            android:onClick="toggle_contents"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/bib_hopla_titel" 
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <LinearLayout
            android:id="@+id/bib_bgp_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bib_hopla"
            android:layout_alignTop="@+id/bib_hopla"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bib_bgp_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bib_hopla_address" />

            <TextView
                android:id="@+id/bib_bgp_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bib_hopla_tel" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

        </LinearLayout>
	</LinearLayout>
</ScrollView>

